@using cloudscribe.Pagination.Models;
@using CMS1_Core.Models;
@model PagedResult<tblZone>

<input type="hidden" id="currentPageIndex" value="@(Model.PageNumber + 1)" />
<input type="hidden" id="countItem" value="@(Model.Data.Count)" />

<table class="table table-striped jambo_table bulk_action">
    <thead>
        <tr class="headings">
            <th class="column-title">Chuyên mục </th>
            <th class="column-title" style="width:200px">
                &nbsp;
            </th>
        </tr>
    </thead>
    @foreach (var item in Model.Data)
    {
        <tr>
            <td>@item.ZoneName</td>
            <td>
                <button class="btn btn-info" onclick="AddZone('@item.Id')"><i class="fa fa-pencil"></i> Sửa </button>
                <button class="btn btn-danger" onclick="DeleteZone('@item.Id')"><i class="fa fa-remove"></i> Xoá </button>
            </td>
        </tr>
    }
</table>


<div>
    <cs-pager cs-paging-pagesize="Model.PageSize"
              cs-paging-pagenumber="Model.PageNumber + 1"
              cs-paging-totalitems="Model.TotalItems"
              cs-pagenumber-param="page"
              cs-ajax-target="#dvList"
              asp-controller="Zone"
              asp-action="GetList"
              asp-route-pagesize="Model.PageSize">
    </cs-pager>
</div>
