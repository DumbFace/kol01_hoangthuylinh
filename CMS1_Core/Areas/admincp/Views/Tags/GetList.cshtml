@using CMS1_Core.Models
@using cloudscribe.Web.Pagination
@using cloudscribe.Pagination.Models

@model PagedResult<tblTag>

<input type="hidden" id="currentPageIndex" value="@(Model.PageNumber + 1)" />
<input type="hidden" id="countItem" value="@(Model.Data.Count)" />
<div class="table-responsive">
    <table class="table table-striped jambo_table bulk_action">
        <thead class="headings">
            <tr style="padding: 5px">
                <th class="column-title w200">Tag</th>
                <th class="column-title">Mô tả</th>
                <th class="column-title w200"></th>
            </tr>
        </thead>
        @foreach (var item in Model.Data)
        {
            <tr>
                <td id="@item.Id">@item.TagName</td>
                <td>
                    @item.Description
                </td>

                <td class="text-right dvAction">
                    <button class="btn btn-info" onclick="AddTag('@item.Id')"><i class="fa fa-pencil"></i> Sửa </button>
                    <button class="btn btn-danger" onclick="DeleteTag('@item.Id')"><i class="fa fa-remove"></i> Xoá </button>
                </td>
            </tr>
        }
    </table>
</div>

<div>
    <cs-pager cs-paging-pagesize="Model.PageSize"
              cs-paging-pagenumber="Model.PageNumber + 1"
              cs-paging-totalitems="Model.TotalItems"
              cs-pagenumber-param="page"
              cs-ajax-target="#dvList"
              asp-controller="Tags"
              asp-action="GetList"
              asp-route-pagesize="Model.PageSize">
    </cs-pager>
</div>