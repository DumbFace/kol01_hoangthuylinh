@using CMS1_Core.Models
@model tblReqPassword

@{
    Layout = null;
    ViewBag.Title = "Thay đổi mật khẩu";
}
<!DOCTYPE html>
<html>

<head>
    <title>@ViewBag.Title</title>
    <meta charset="utf-8">
    <meta content="ie=edge" http-equiv="x-ua-compatible">
    <meta content="width=device-width, initial-scale=1" name="viewport">

    <environment names="Development">
        <link rel="stylesheet" href="/css/bootstrap.min.css" type="text/css">
        <link rel="stylesheet" href="/css/font-awesome.min.css" type="text/css">
        <link rel="stylesheet" href="/css/site.css" type="text/css">
        <link rel="stylesheet" href="/css/responsive.min.css" type="text/css">
        <link rel="stylesheet" href="/css/swiper.min.css" type="text/css">
    </environment>
    <environment names="Product">
        <link rel="stylesheet" href="/css/changePassWord.min.css" type="text/css">
    </environment>
</head>

<body class="auth-wrapper">
    <div class="all-wrapper menu-side with-pattern">
        <div class="auth-box-w">
            <div class="logo-w">
                <a href="/l"><img alt="" src="~/Images/logohome.png" class="img-fluid" style="width:65%"></a>
            </div>
            <h4 class="auth-header">
                @ViewBag.Title
            </h4>
            <form id="frmEdit" name="frmEdit" role="form">
                <input type="hidden" name="Id" id="Id" value="@ViewBag.Id" />
                <div class="form-group">
                    <label for="">Mật khẩu cũ</label>
                    @Html.PasswordFor(model => model.OldPass, new { @class = "form-control required" })
                    @Html.ValidationMessageFor(model => model.OldPass, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="">Mật khẩu mới</label>
                    @Html.PasswordFor(model => model.NewPass, new { @class = "form-control required" })
                    @Html.ValidationMessageFor(model => model.NewPass, "", new { @class = "text-danger" })
                </div>
                <div class="buttons-w">
                    <button class="btn btn-primary" type="button" onclick="resetpass(); return false;">Cập nhật</button>

                </div>
            </form>
        </div>
    </div>

    <environment names="Development">
        <script src="/js/jquery-3.4.1.min.js" type="text/javascript"></script>
        <script src="/js/jquery.validate.min.js" type="text/javascript"></script>
        <script src="/js/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
        <script src="/js/jquery.unobtrusive-ajax.min.js" type="text/javascript"></script>
        <script src="/js/bootstrap.bundle.min.js" type="text/javascript"></script>
        <script src="/js/bootbox.min.js" type="text/javascript"></script>
    </environment>
    <environment names="Product">
            <script src="/js/changePassWord.min.js" type="text/javascript"></script>
    </environment>
    <script type="text/javascript">
        function initValidate() {
            var submitSettings = $.data($("#frmEdit").get(0), 'validator').settings;

            submitSettings.messages = {
                OldPass: {
                    required: "Vui lòng nhập mật khẩu"
                },
                NewPass: {
                    required: "Vui lòng nhập mật khẩu"
                }
            };
        }
        function resetpass() {
            if ($('#frmEdit').valid()) {
                $.ajax({
                    url: "/admincp/manageusers/CheckCurrentPass",
                    type: "POST",
                    data: {
                        oldPass: $("#OldPass").val()
                    },
                    success: function (msg) {
                        if (msg == "0") {
                            bootbox.alert("Mật khẩu cũ không chính xác. Vui lòng kiểm tra lại");
                            return false;
                        } else {
                            $.ajax({
                                url: "/admincp/manageusers/updatepass",
                                type: "POST",
                                data: {
                                    Id: $("#Id").val(),
                                    str: $("#NewPass").val(),
                                },
                                success: function (msg) {
                                    if (msg == "ok") {
                                        bootbox.alert("Đã cập nhật mật khẩu thành công", function () {
                                            window.location.href = "/";
                                        });
                                    }
                                }
                            })
                        }
                    }
                })
            }
        }

        $(document).ready(function () {
            initValidate();
        })
    </script>
</body>

</html>
