@using CMS1_Core.Models
@model tblUser

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Đăng nhập hệ thống CP DAN</title>
    <meta charset="utf-8">
    <meta content="ie=edge" http-equiv="x-ua-compatible">
    <meta content="width=device-width, initial-scale=1" name="viewport">

    <environment names="Development">
    <link rel="stylesheet" href="/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="/css/site.css" type="text/css">
    <link rel="stylesheet" href="/css/responsive.min.css" type="text/css">
    <link rel="stylesheet" href="/css/swiper.min.css" type="text/css">
    </environment>
    <environment names="Product">
        <link rel="stylesheet" href="/css/login.min.css" type="text/css">
    </environment>

</head>
<body class="auth-wrapper">
    <div class="all-wrapper menu-side with-pattern">
        <div class="auth-box-w">
            <div class="logo-w">
                <a href="/l"><img alt="" src="~/Images/logohome.png" class="img-fluid" style="width:65%"></a>
            </div>
            <h4 class="auth-header">
                Đăng nhập hệ thống
            </h4>
            <form id="frmEdit" name="frmEdit" role="form">
                @Html.HiddenFor(model => model.Id)

                <div class="form-group">
                    <label for="">Username</label>
                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control required" } })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="">Mật khẩu</label>
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control required" })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
                <div class="g-recaptcha" data-sitekey="6Lc0VIQgAAAAANynUd9IhzXfFcGc9cGfn8yAp3MF"></div>

                <div class="buttons-w" style="margin-top:10px">
                    <button class="btn btn-primary" type="button" onclick="login(); return false;">Đăng nhập</button>

                </div>
            </form>
        </div>
    </div>

        <environment names="Development">
    <script src="/js/jquery-3.4.1.min.js" type="text/javascript"></script>
    <script src="/js/jquery.validate.min.js" type="text/javascript"></script>
    <script src="/js/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
    <script src="/js/jquery.unobtrusive-ajax.min.js" type="text/javascript"></script>
    <script src="/js/bootstrap.bundle.min.js" type="text/javascript"></script>
    <script src="/js/bootbox.min.js"></script>
    </environment>
    <environment names="Product">
        <script src="/js/login.min.js" type="text/javascript"></script>
    </environment>
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>

    <script type="text/javascript">
        function initValidate() {
            var submitSettings = $.data($("#frmEdit").get(0), 'validator').settings;

            submitSettings.messages = {
                UserName: {
                    required: "Vui lòng nhập username"
                },
                Password: {
                    required: "Vui lòng nhập mật khẩu"
                },
            };
        }

        function login() {
            if ($('#frmEdit').valid()) {
                var response = grecaptcha.getResponse();
                if (response != '') {
                    $.ajax({
                        url: "@Url.Action("Login", "MyAccount")",
                        type: "POST",
                        data: $("#frmEdit").serialize(),
                        success: function (msg) {
                            switch (msg) {
                                case "0":
                                    bootbox.alert("Thông tin đăng nhập không đúng");
                                    break;
                                case "1":
                                    window.location.href = "/admincp";
                                    break;
                            }
                        }
                    })
                } else {
                    bootbox.alert("Vui lòng xác nhận không phải là robot");
                }
            }
        }

        $(document).ready(function () {
            initValidate();
        })
    </script>
</body>

</html>
