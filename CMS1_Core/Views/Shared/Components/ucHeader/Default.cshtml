@{
    int intShow = (int)ViewBag.showHead;

}
<header class="th-header">
    <div class="container">
        <div class="dvLogo">
            <a href="/">
                <img src="~/Images/logo1.png" alt="" height="68" onerror="this.onerror=null; this.src='/content/images/no-image.jpg'">
            </a>
        </div>
        <div class="dvTags">
            <img src="~/Images/img-trend.png" />
            @await Component.InvokeAsync("GetTagsHeader")
        </div>
        <div style="float:right;margin-right:10px">
            <form class="dvSearch" id="frmSearh">
                <input id="txtKey" type="text" name="q" placeholder="Tìm kiếm" autocomplete="off" class="form-control" onkeypress="return runScript(event);">
                <button class="btn" type="button" onclick="SearchData(); return false;">
                    <i class="fa fa-search"></i>
                </button>
            </form>
        </div>
    </div>
    <div class="clearfix"></div>
</header>
<div class="dvHeader">
    <div class="container">
        @if (intShow == 1)
        {
            <h1>
                Tin sao Hàn
            </h1>
        }
        else
        {
            <div> Tin sao Hàn</div>
        }
    </div>
</div>
