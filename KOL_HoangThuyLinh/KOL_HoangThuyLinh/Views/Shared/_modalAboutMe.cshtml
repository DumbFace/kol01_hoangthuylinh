
<div class="modal fade" id="ModalAboutUs" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-xl modal-dialog-centered" role="document">
        <div class="modal-content">
            @if (ViewBag.AboutMe != null)
            {
                <div class="modal-header">
                    <h1 class="modal-title">@ViewBag.AboutMe.Title</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal">
                        <span>&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div id="about">
                        <div class="container">
                            <div class="wrapper">
                                <div class="row align-items-center">
                                    <div class="col-12 col-sm-12 col-lg-12 text-center">
                                        <div class="image">
                                            <img src="@ViewBag.AboutMe.Avatar" alt="" />
                                        </div>
                                    </div>
                                    <div class="col-12 col-sm-12 col-lg-12 text-sm-left text-center m-3">
                                        <div class="text">
                                            <div id="teaser-aboutme">
                                                @Html.Raw(ViewBag.AboutMe.Teaser)
                                            </div>
                                        </div>
                                        <div class="button-more-detail btn btn-light">
                                            <a id="MoreDetail" data-toggle="collapse" href="#contentId">
                                                <span>Xem thêm</span>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row detail-content">
                                <div class="col-sm-12">
                                    <div class="collapse" id="contentId">
                                        @Html.Raw(ViewBag.AboutMe.Body)
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                </div>
            }
        </div>
    </div>
</div>