@using MvcPaging;
@using KOL_HoangThuyLinh.Models
@model IPagedList<tblHome>
@using System.Web.Configuration;
@{
    string url = WebConfigurationManager.AppSettings["UrlHost"];
}

<div class="row row-top-news">

    @foreach (tblHome tbl in Model)
    {
        string urlLink = url + tbl.UrlLink + "-" + tbl.Id + ".html";

        <div class="col-sm-3 mb-2">
            <div class="row">
                <div class="col-sm-12">
                    <a href="@urlLink" rel="noopener noreferrer">
                        <figure class="figure">
                            <img src="@tbl.Avatar2x1" class="figure-img img-fluid">
                        </figure>
                    </a>
                </div>
                <div class="col-sm-12">
                    <div class="th-posttitle mini">
                        <h2>
                            <a href="@urlLink" rel="noopener noreferrer">
                                    @tbl.Title
                            </a>
                        </h2>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


<div class="clearfix"></div>

@if (Model.PageCount > 1)
{
    <div class="paging">
        @Html.Pager(Model.PageSize, Model.PageIndex + 1, Model.TotalItemCount, new AjaxOptions() { UpdateTargetId = "dvList" }).Options(o => o
           .RouteValues(new { clickPaging = true, ViewBag.Id })
          .DisplayTemplate("Bootstrap4Pagination")
         .MaxNrOfPages(5)
        )
    </div>
}